{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["scripts/**/*", "hardhat.config.ts", "test/**/*", "typechain-types/**/*"],
  "exclude": ["node_modules", "artifacts", "cache"]
}
